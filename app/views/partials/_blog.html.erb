<section id="blog-section">
	<div class="container">
		<div class="white-wrapper">
			<% @blogs.all.each do |post| %>
				<article class="blog-post-<%= post.id %>">
					<h2><%= link_to post.title.titleize, blog_post_path(post) %></h2>
					<h4>By: <%= post.author %></h4>
					<p class="date">Date: <%= post.created_at %></p>
					<p><%= post.content %></p>
				</article>
				<hr>
			<% end %>
		</div>

		<aside>
			<h2>About me</h2>
			<figure class="blog-photo">
				<%= image_tag("chris.jpg", alt: "Photo of Chris Dziewa") %>
			</figure>	
			<p>Hey, I'm Chris Dziewa and welcome to my blog. This is where I write about my journey to teach myself web development.</p>
		</aside>
	</div>
</section>